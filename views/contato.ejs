<form action="/contato/enviar" method="post">
  <div class="form-group">
    <input type="text1" id="nome" placeholder="Nome" name="nome" required>
    <input type="email" id="email" placeholder="E-mail" name="email" required>
    <input type="text1" id="assunto" placeholder="Assunto"  name="assunto" required>
