<body>
  <div class="container">
    <i class="fas fa-user-plus"></i>
    <h4>ALTERAR CADASTRO</h4>
    <form action="/alterar/<%= user._id %>" method="POST" id="cadastroForm">
      <div class="form-group-cadastro">
        <input type="email" name="email" id="email" placeholder="E-mail" value="<%= user.email %>" required> 
        <input type="password" name="senha" id="senha" placeholder="Senha" value="<%= user.senha %>" required>   
        <input type="text" name="nome" id="nome" placeholder="Nome" value="<%= user.nome %>" required>   
        <button type="submit">Alterar</button>
      </div>
    </form>    
  </div>
